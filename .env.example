# Environment setup
NODE_ENV=development
PORT=5000

# Database setup
DATABASE_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority&appName=<app_name>

# Security settings
BCRYPT_SALT_ROUNDS=12
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_EXPIRES_IN=10d
JWT_REFRESH_EXPIRES_IN=365d
REFRESH_TOKEN_COOKIE_EXPIRES_IN="1000 * 60 * 60 * 24 * 365"

# Links
RESET_PASS_UI_LINK=http://localhost:3000/auth/reset-password

# Cloudinary settings
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here


# Nodemailer settings
NODEMAILER_EMAIL=your_email_here
NODEMAILER_APP_PASSWORD=your_email_app_password_here

# Miscellaneous settings
RESET_PASSWORD_TIME="10m"